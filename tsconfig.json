{
  "compilerOptions": {
    "module": "esnext", // or es2020, es2022, etc.
    "target": "esnext",
    "lib": ["dom", "es2015"],
    "moduleResolution": "node",

    "jsx": "react-jsx",
    "esModuleInterop": true,  
    "baseUrl": "./src",   // Set the base directory for imports
    "paths": {
      "@/*": ["./*"]      // Define the alias for the 'src' folder
    }
  }
}
